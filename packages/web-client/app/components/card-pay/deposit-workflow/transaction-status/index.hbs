<Boxel::CardContainer>
  <Boxel::ProgressSteps
    @progressSteps={{this.progressSteps}}
    @completedCount={{this.completedCount}}
    as |progressStep|
  >
    <span>{{progressStep.title}}</span>
    {{#if (eq progressStep.index 0)}}
      <Boxel::Button @as="anchor" @size="extra-small" @href={{this.depositTxnViewerUrl}} target="_blank">
        View on Etherscan
      </Boxel::Button>
    {{/if}}
  </Boxel::ProgressSteps>
</Boxel::CardContainer>