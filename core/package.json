{
  "name": "@cardstack/core",
  "version": "0.0.0",
  "keywords": [],
  "author": "Edward Faulkner <edward@eaf4.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/cardstack/cardstack",
    "directory": "core"
  },
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "license": "MIT",
  "description": "Core library for Cardstack, portable to both browser and server environments",
  "dependencies": {
    "@babel/core": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-decorators": "^7.12.13",
    "@glimmer/syntax": "^0.74.2",
    "@types/babel__core": "^7.1.12"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.12.7",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.1",
    "ember-source": "~3.24.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "qunit": "^2.13.0",
    "style-loader": "^2.0.0",
    "testem": "^3.2.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.15.0",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.2"
  },
  "peerDependencies": {
    "ember-source": "^3"
  },
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel 'lint:!(fix)'",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:js": "eslint . --cache --ext .js,.ts",
    "lint:js:fix": "eslint . --cache --ext .js,.ts --fix",
    "lint:types": "tsc",
    "start": "webpack serve",
    "test": "npm-run-all lint test:*",
    "test:node": "node --loader ts-node/esm ../node_modules/.bin/qunit 'tests/**/*-test.ts'",
    "test:browser": "webpack && testem ci"
  },
  "type": "module",
  "volta": {
    "extends": "../package.json"
  }
}
