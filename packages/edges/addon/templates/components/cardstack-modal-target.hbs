{{#from-elsewhere name="cardstack-modal" as |args outsideParams|}}
  {{#if args.content}}
    <div class="cardstack-modal-backdrop"></div>
    <div 
      role="button" 
      class="cardstack-modal-container"
      onclick={{action 
        (cs-exact-target ".cardstack-modal-container" outsideParams.outsideClick)
      }}
    >
      <div class="cardstack-modal-dialog" >
        {{component args}}
      </div>
    </div>
  {{/if}}
{{/from-elsewhere}}