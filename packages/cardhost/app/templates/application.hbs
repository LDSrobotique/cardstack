<div>
  {{#cardstack-session as |session|}}
    {{#if session.isAuthenticated }}
      <button
        id="logout-button"
        onclick={{action session.logout}}
      >
        Logout {{session.user.name}}
      </button>
    {{else}}
      {{#mock-login as |login|}}
        <button
          id="login-button"
          onclick={{action login "user1"}}
          data-test-cardstack="login-button"
        >
          Login
        </button>
      {{/mock-login}}
    {{/if}}
  {{/cardstack-session}}

  <h1>Card Test Harness:</h1>
  {{outlet}}
</div>