{
  "name": "@cardstack/card-loader",
  "version": "0.0.0",
  "description": "Card loader for webpack",
  "license": "MIT",
  "author": "Edward Faulkner",
  "main": "src/index.js",
  "type": "module",
  "files": [
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.js.map"
  ],
  "scripts": {
    "prepare": "tsc",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel 'lint:!(fix)'",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:js": "eslint . --cache --ext .js,.ts",
    "lint:js:fix": "eslint . --cache --ext .js,.ts --fix",
    "lint:types": "tsc",
    "test": "npm-run-all lint test:*",
    "test:node": "qunit --require ts-node/register tests/*-test.ts"
  },
  "dependencies": {
    "@babel/core": "^7.12.13",
    "@types/babel__core": "^7.1.12",
    "loader-utils": "^1.1.0",
    "walk-sync": "^2.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/loader-utils": "^1.1.3",
    "@types/node": "^10.5.2",
    "eslint": "^7.23.0",
    "qunit": "^2.13.0",
    "memory-fs": "^0.5.0",
    "testem": "^3.2.0",
    "ts-node": "^9.1.1",
    "typescript": "~4.1.0"
  },
  "engines": {
    "node": ">= 14"
  },
  "volta": {
    "extends": "../package.json"
  }
}