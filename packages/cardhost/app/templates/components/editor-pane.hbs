<ReSizable
  ...attributes
  data-test-editor-pane
  class="cardhost-card-theme-editor {{classNames}}"
  @width={{this.width}}
  @directions={{this.resizeDirections}}
  @height={{this.height}}
>
  <div class="resizable-content">
    <h3>Card Theme Editor</h3>
    <CodeEditor
      @code={{@model.isolatedCss}}
      @language="css"
      @readOnly={{false}}
      @updateCode={{action "updateCode"}}
      class="editor-pane-code"
    />

    <h3>HTML Viewer</h3>
    <CodeEditor
      @code={{this.markup}}
      @language="handlebars"
      @readOnly={{true}}
      class="editor-pane-code"
    />

    {{svg-jar "icon-grabber" class="drag-handle"}}
  </div>
</ReSizable>

<style id="card-styles">{{@model.isolatedCss}}</style>
