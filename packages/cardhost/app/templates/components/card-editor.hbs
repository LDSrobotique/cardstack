{{yield this.card (hash
  parentCard=this.parentCard
  grandParentCard=this.grandParentCard
  setCardValue=this.setCardValue
  selectedField=this.selectedField
  selectedFieldName=this.selectedFieldName
  selectedFieldType=this.selectedFieldType
)}}

<section
  class="card-editor"
  data-test-card-edit={{this.card.name}}
  {{did-update this.updateCard @card}}
>
  <div class="card-renderer--container">
    <CardRenderer
      @card={{this.originalCard}}
      @mode="edit"
      @setCardValue={{this.setCardValue}}
      @setCardReference={{this.setCardReference}}
      @format="isolated"
      @selectField={{action this.selectField}}
      @selectedField={{this.selectedField}}
      @selectedFieldName={{this.selectedFieldName}}
      @cardSelected={{this.originalCard.isSelected}}
      {{!-- ugh, we're monkey patching the Card API --}}
      @cardFocused={{action (mut this.originalCard.isSelected)}} />
  </div>
</section>

{{!-- This is hidden, used in tests --}}
<section class="_cardhost-card-document">
  <h3>Card Document</h3>
  <pre data-test-card-json>{{this.cardJson}}</pre>
</section>
