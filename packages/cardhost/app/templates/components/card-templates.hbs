
<div class="card-catalog"
  data-test-templates
  data-test-templates-loaded={{stringify this.loadTemplates.isIdle}}
>
  {{#each this.templates as |card|}}
    <Cta {{on "click" (fn @openCardNameDialog "Adopt a Card" card)}}
      @class="card-catalog--embedded-card-link"
      data-test-embedded-card={{card.name}}
      data-test-adopt-card-btn={{card.canonicalURL}}
    >
      <CardRenderer
        @card={{card}}
        @format="embedded"
        @preventIsolation={{true}}
        @showName={{true}}
      />
    </Cta>
  {{/each}}
</div>