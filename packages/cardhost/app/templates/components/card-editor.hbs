<CardstackEdge @edge="right" @componentToShow={{component "right-edge" mode="fields" card=this.card cardSelected=true}}>
  <InRightToolbar/>
</CardstackEdge>
<CardstackEdge @edge="left" @componentToShow={{component "cardhost-left-edge"}}>
  <InLeftToolbar />
</CardstackEdge>

<section
  class="card-editor"
  data-test-card-edit={{this.card.name}}
  {{did-update this.updateCard @card}}
>
  <div class="card-renderer--container">
    <CardRenderer
      @card={{this.card}}
      @mode="edit"
      @setFieldValue={{action this.setFieldValue}}
      @format="isolated"
      @selectField={{action this.selectField}}
      @selectedField={{this.selectedField}}
      @cardSelected={{this.card.isSelected}}
      @cardFocused={{action (mut this.card.isSelected)}} />
  </div>
</section>

{{!-- This is hidden, used in tests --}}
<section class="cardhost-card-document">
  <h3>Card Document</h3>
  <code data-test-card-json>{{this.cardJson}}</code>
</section>
