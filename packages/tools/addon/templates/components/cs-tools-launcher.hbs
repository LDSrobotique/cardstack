{{#if toolsAvailable}}
  {{#if hasBlock}}
    {{yield
      (hash
        active=active
        setActive=(action "setActive")
        toggleActive=(action "toggleActive")
      )
    }}
  {{else}}
    {{! template-lint-disable no-invalid-interactive }}
    <button
      class="cardstack-tools-launcher {{if active "active" "inactive"}}"
      onclick={{action "toggleActive"}}
      aria-label="Edit"
      data-test-cardstack-tools-launcher
    >
      {{cs-svg
        "cs-tools-launcher-icon"
        width="16px"
        height="16px"
        data-test-cardstack-tools-launcher-icon=active
      }}
    </button>
  {{/if}}
{{/if}}