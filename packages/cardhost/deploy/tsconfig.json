{
  "include": ["./**/*.ts", "./**/*.js" ],
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "moduleResolution": "Node",
    "declaration": true,
    "typeRoots": ["node_modules/@types", "types"],
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "tmp",
    "dist"
  ]
}