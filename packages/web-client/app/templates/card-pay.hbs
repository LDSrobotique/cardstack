<Boxel::Dashboard @darkTheme={{true}} class="card-pay" data-test-card-pay>
  <:header>
    <Boxel::OrgHeader
      @title="Card Pay"
      @iconURL={{this.cardPayLogo}}
      class="card-pay-header"
      data-test-card-pay-header
    >
      <CardPay::HamburgerMenuTrigger
        class="card-pay-header__hamburger-trigger"
        @displayMenu={{this.displayMenu}}
        @toggleMenu={{this.toggleMenu}}
      />
      <CardPay::WalletConnect
        @layer1ChainName={{this.layer1Network.chainName}}
        @layer1Connect={{set this 'isShowingLayer1ConnectModal' true}}
        @layer2ChainName={{this.layer2Network.chainName}}
        @layer2Connect={{set this 'isShowingLayer2ConnectModal' true}}
        @isLayer1Connected={{this.layer1Network.isConnected}}
        @isLayer2Connected={{this.layer2Network.isConnected}}
        @layer1Address={{this.layer1Network.walletInfo.accounts.0.address}}
        @layer2Address={{this.layer2Network.walletInfo.accounts.0.address}}
      />
      <CardPay::HeaderNav @tabs={{this.tabList}} />
    </Boxel::OrgHeader>
  </:header>

  <:body>
    <aside class={{cn "card-pay-sidebar" card-pay-sidebar--slide-in=this.displayMenu}}>
      <CardPay::WalletConnect
        @layer1ChainName={{this.layer1Network.chainName}}
        @layer1Connect={{set this 'isShowingLayer1ConnectModal' true}}
        @layer2ChainName={{this.layer2Network.chainName}}
        @layer2Connect={{set this 'isShowingLayer2ConnectModal' true}}
        @isLayer1Connected={{this.layer1Network.isConnected}}
        @isLayer2Connected={{this.layer2Network.isConnected}}
        @layer1Address={{this.layer1Network.walletInfo.accounts.0.address}}
        @layer2Address={{this.layer2Network.walletInfo.accounts.0.address}}
      />
      <CardPay::HeaderNav @tabs={{this.tabList}} />
    </aside>

    <main class="card-pay__main">
      {{outlet}}
    </main>
  </:body>
</Boxel::Dashboard>

{{#if this.isShowingLayer1ConnectModal}}
  <CardPay::LayerOneConnectModal
    @onClose={{set this 'isShowingLayer1ConnectModal' false}}
  />
{{/if}}

{{#if this.isShowingLayer2ConnectModal}}
  <CardPay::LayerTwoConnectModal
    @onClose={{set this 'isShowingLayer2ConnectModal' false}}
  />
{{/if}}