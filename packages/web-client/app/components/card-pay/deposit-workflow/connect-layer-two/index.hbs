<Boxel::CardContainer
  @header="Wallet Connection - Layer 2"
>
  {{#if this.isWaitingForConnection}}
    {{#if this.layer2Network.walletConnectUri}}
      <div data-test-wallet-connect-qr-code class="card-pay-deposit-workflow-connect-layer-two__qr-container">
        <StyledQrCode
          @data={{this.layer2Network.walletConnectUri}}
          @image={{this.cardstackLogo}}
          @size={{340}}
          @backgroundColor="#efefef"
          @dotType="dots"
          @dotColor="#272330"
          @cornerDotType="dot"
          @cornerSquareType="extra-rounded"
          @imageMargin={{5}}
        />
      </div>
    {{else}}
      <p>
        TODO: spinner
        Loading QR Code for Cardstack Mobile wallet connection
      </p>
    {{/if}}
  {{else if this.hasAccount}}
    TODO: show wallet details and balances
  {{/if}}
</Boxel::CardContainer>