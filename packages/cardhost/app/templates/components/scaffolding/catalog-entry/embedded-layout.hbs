<div
  class="embedded-card"
  data-test-catalog-entry
  data-test-embedded-card={{@card.canonicalURL}}
  data-test-embedded-card-loaded={{stringify this.loadCard.isIdle}}
  data-test-embedded-card-mode={{@mode}}>
  <div class={{if (or (eq @mode "view") (eq @mode "layout")) "embedded-card--view-fields"}}>
    {{#each this.fields as | field |}}
      <FieldRenderer @card={{@card}} @field={{field}} @mode={{@mode}}/>
    {{/each}}
  </div>
</div>