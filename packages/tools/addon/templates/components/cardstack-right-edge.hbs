<div class="cardstack-tools cardstack-right-edge" data-test-cardstack-right-edge>
  {{cs-branch-control}}

  {{!-- this condition won't be necessary when
        the create-menu is moved out of the panel --}}
  {{#if (eq tools.activePanel "cs-composition-panel")}}
    {{cs-editor-switch}}
  {{/if}}

  {{#if (is-component tools.activePanel)}}
    {{component tools.activePanel tools=tools}}
  {{/if}}

  {{#if cardstackRouting}}
    {{cs-create-button routing=cardstackRouting}}
  {{/if}}

  {{!-- this block won't be necessary when
        the create-menu is moved out of the panel --}}
  {{#if (eq tools.activePanel "cs-create-menu")}}
    {{#cs-mode-choices for="activePanel" as |choice|}}
      <section>
        {{cs-mode-button mode=choice}}
      </section>
    {{/cs-mode-choices}}
  {{/if}}
</div>