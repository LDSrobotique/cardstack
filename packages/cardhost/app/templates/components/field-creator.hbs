<fieldset class="card-creator--add-field">
  <legend>Add Field</legend>
  <label for="new_field_type">Field Type:</label>
  <select id="new_field_type" {{on "input" (action this.fieldTypeChanged)}}>
    {{#each this.fieldTypes as |fieldType|}}
      {{#if (eq this.newFieldType fieldType)}}
        <option selected>{{fieldType}}</option>
      {{else}}
        <option>{{fieldType}}</option>
      {{/if}}
    {{/each}}
  </select>
  <br>

  <label for="new_field_name">Field Name:</label>
  <Input
    @id="new_field_name"
    @value={{this.newFieldName}}
    @placeholder="e.g. Title"
  />
  <br>

  <Input
    @checked={{this.newFieldEmbedded}}
    @type="checkbox"
    @id="new_field_embedded"
  />
  <label for="new_field_embedded">Needed when Embedded</label>
  <br>

  {{#if this.newFieldName}}
    <label for="new_field_value">Field Value:</label>
    <FieldEditor
      @id="new_field_value"
      @field={{hash
        fieldName=this.newFieldName
        fieldType=this.newFieldType
      }}
      @onUpdate={{action (mut this.newFieldValue)}}
    />
    <br>
  {{/if}}
  <div class="card-creator--field-btn-wrapper">
    <button {{on "click" this.addField}} data-test-card-creator-add-field-btn>Add</button>
  </div>
</fieldset>