<details class="balance-view" ...attributes>
  <summary class="balance-view__summary">
    <span>{{@wallet}} wallet</span>
    <span class="balance-view__summary-balance">{{@balance}} {{@tokenSymbol}}</span>
    <div class="balance-view__marker">
      {{svg-jar "caret-right" class="balance-view__marker-icon" role="presentation"}}
    </div>
  </summary>
  <CardPay::NestedItems class="balance-view__details">
    <:outer>
      <div class="deposit-card__address">
        {{@address}}
      </div>
    </:outer>
    <:inner>
      <div class="deposit-card__icon-group">
        {{svg-jar @tokenIcon class="deposit-card__icon" role="presentation" width="40" height="40"}}
        <div>
          <div class="deposit-card__title-lg">
            {{@balance}} {{@tokenSymbol}}
          </div>
          <div class="deposit-card__text-sm">
            {{#if @balanceInUsd}}
              â‰ˆ $ {{@balanceInUsd}} USD
            {{else}}
              <LoadingIndicator width="20" height="20" />
            {{/if}}
          </div>
        </div>
      </div>
    </:inner>
  </CardPay::NestedItems>
</details>