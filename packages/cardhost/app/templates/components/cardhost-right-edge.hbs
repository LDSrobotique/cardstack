<div class="card-manipulator--right-edge" data-test-right-edge>
  {{#if @selectedField}}
    <div class="card-manipulator--right-edge--pill-selector">
      <div class="card-manipulator--right-edge--pill-option selected">Properties</div>
      <div class="card-manipulator--right-edge--pill-option">Structure</div>
    </div>
    <div class="card-manipulator--right-edge--section">
      <div class="section-header">{{this.sectionTitle}}</div>
      <div class="card-manipulator--right-edge--attribute">
        <div class="attribute-title">Field Name</div>
        <Input
          data-test-field-name
          @id={{concat "card-manipulator--right-edge--field-name-" @selectedField.nonce}}
          @value={{@selectedFieldName}}
          @key-up={{@updateFieldName}}
        />
      </div>
      <div class="card-manipulator--right-edge--attribute">
        <div class="attribute-title">Display Label</div>
        <Input
          data-test-field-label
          @id={{concat "card-manipulator--right-edge--field-label-" @selectedField.nonce}}
          @value={{@selectedFieldLabel}}
          @key-up={{@updateFieldLabel}}
        />
      </div>
      <div class="card-manipulator--right-edge--attribute">
        <div class="attribute-title">Helper Text</div>
        <Textarea
          data-test-field-helper-text
          @id={{concat "card-manipulator--right-edge--field-helper-text" @selectedField.nonce}}
        />
      </div>
      <div class="card-manipulator--right-edge--attribute">
        <label class="checkbox-container">
          Required
          <Input @type="checkbox" />
          <span class="checkmark"></span>
        </label>
      </div>
      <div class="card-manipulator--right-edge--attribute">
        <label class="checkbox-container">
          Available When Embedded
          <Input
            @checked={{@selectedField.neededWhenEmbedded}}
            @type="checkbox"
            @click={{fn @setNeededWhenEmbedded @selectedField.name}}
            data-test-needed-when-embedded
          />
          <span class="checkmark"></span>
        </label>
      </div>
    </div>
  {{/if}}
</div>