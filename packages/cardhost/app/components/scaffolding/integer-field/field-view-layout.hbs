<div class="label {{@card.name}}-label" data-test-integer-field-viewer-label>
  {{@card.csTitle}}
</div>
<div class="value {{@card.name}}-value integer-{{this.fieldValue}}" data-test-integer-field-viewer-value>
  {{#if this.fieldValue}}
    {{this.fieldValue}}
  {{else}}
    <span class="{{@card.name}}-placeholder-value">N/A</span>
  {{/if}}
</div>