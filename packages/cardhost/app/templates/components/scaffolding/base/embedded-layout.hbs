{{#unless this.loadCard.isRunning}}
  <div
    class="embedded-card {{safe-css-string this.adoptedFromId}}--embedded"
    data-test-embedded-card={{@card.csTitle}}
    data-test-embedded-card-mode={{@mode}}>
    <div class={{if (or (eq @mode "view") (eq @mode "layout")) "embedded-card--view-fields"}}>
      {{#each this.fields as | field |}}
        <FieldRenderer @field={{field}} @mode={{@mode}}/>
      {{/each}}
    </div>
  </div>
{{/unless}}