<CardhostTopEdge>
  <ModeSwitcher @name={{this.model.name}} @mode="view" />
</CardhostTopEdge>

<CardhostLeftEdge />

<div class="cards-view" data-test-card-view={{this.model.name}}>
  <CardRenderer @card={{this.model}} @format="isolated"/>

  <section class="cardhost-card-document">
    <h3>Card Document</h3>
    <CodeBlock
      @code={{this.cardJson}}
      @language="javascript"
    />
  </section>
</div>