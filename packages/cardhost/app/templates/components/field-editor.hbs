{{#if
  (or
    (eq this.displayType "string")
    (eq this.displayType "case-insensitive string")
  )
}}
  <Input
    @id={{@id}}
    @value={{get this.fieldValue @field.name}}
    @size={{this.size}}
    @key-up={{action this.updateFieldValue}}
  />
  <br>
{{else if (eq this.displayType "integer")}}
  <Input
    @id={{@id}}
    @type="number"
    @value={{get this.fieldValue @field.name}}
    @key-up={{action this.updateFieldValue}}
  />
  <br>
{{else if (eq this.displayType "date")}}
  <Input
    @id={{@id}}
    @type="date"
    @value={{get this.fieldValue @field.name}}
    @change={{action this.updateDateFieldValue}}
  />
  <br>
{{else if (eq this.displayType "boolean")}}
  <Input
    @id={{concat "field_" this.nonce "_field_value_true"}}
    @class="field-value-true"
    @name={{concat "field" this.nonce "-boolean-field-value"}}
    @checked={{get this.fieldValue @field.name}}
    @type="radio"
    @data-test-field-creator--true-radio="true"
    @click={{action this.updateBooleanFieldValue}}
  />
  <label for={{concat "field_" this.nonce "_field_value_true"}}>True</label>
  <Input
    @id={{concat "field_" this.nonce "_field_value_false"}}
    @class="field-value-false"
    @name={{concat "field" this.nonce "-boolean-field-value"}}
    @checked={{not (get this.fieldValue @field.name)}}
    @type="radio"
    @data-test-field-creator--true-radio="false"
    @click={{action this.updateBooleanFieldValue}}
  />
  <label for={{concat "field_" this.nonce "_field_value_false"}}>False</label>
  <br>
{{else if (eq this.displayType "related card")}}
  <Input
    @id={{@id}}
    @placeholder="Card ID"
    @size={{this.size}}
    @value={{get this.fieldValue @field.name}}
    @key-up={{action this.updateFieldValue}}
  />
  <br>
{{else if (eq this.displayType "related cards")}}
  <Input
    @id={{@id}}
    @size={{this.size}}
    @placeholder="Comma separated Card ID's"
    @value={{get this.fieldValue @field.name}}
    @key-up={{action this.updateCardsFieldValue}}
  />
  <br>
{{/if}}