<div class="label {{@card.name}}-label" data-test-belongs-to-field-viewer-label>
  {{@card.csTitle}}
</div>
<div class="value {{@card.name}}-value" data-test-belongs-to-field-viewer-value>
  {{#if (eq @card.csFieldArity "plural")}}
    {{#each this.fieldValue as |card|}}
      <CardRenderer @card={{card}} @mode="view" @format="embedded"/>
    {{/each}}
  {{else if this.fieldValue}}
    <CardRenderer @card={{this.fieldValue}} @mode="view" @format="embedded"/>
  {{/if}}
</div>