<div class="cardstack-image-editor">
  {{#if (get content field "base64")}}
    <div class="cardstack-image-editor-filename">
      Selected image: {{get (get content field) 'imageFileName'}}
    </div>
  {{/if}}
  <button class="cardstack-image-editor-button
                 cardstack-image-editor-button--choose"
          {{action (perform chooseImage)}}
          disabled={{disabled}}>
    Choose {{#if (get content field 'base64')}}Another{{/if}} Image
  </button>
  {{#if (get content field "base64")}}
    <button class="cardstack-image-editor-button
                   cardstack-image-editor-button--remove"
            {{action "removeImage"}} disabled={{disabled}}>
      Remove image
    </button>
  {{/if}}
</div>