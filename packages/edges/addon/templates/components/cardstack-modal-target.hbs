{{#from-elsewhere name="cardstack-modal" as |args|}}
  {{#if args.content}}
    <div class="cardstack-modal-backdrop"></div>
    <div 
      role="button" 
      class="cardstack-modal-container"
      onclick={{action (cs-exact-target ".cardstack-modal-container" args.outsideClick) }}
    >
      <div class="cardstack-modal-dialog" >
        {{component args.content}}
      </div>
    </div>
  {{/if}}
{{/from-elsewhere}}