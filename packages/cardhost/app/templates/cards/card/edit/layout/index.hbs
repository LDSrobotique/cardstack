<CardViewer @card={{this.model}} @mode="layout"/>

{{#if this.cardstackSession.isAuthenticated}}
  <CardstackEdge
    @edge="right"
    @componentToShow={{component "right-edge"
      mode="layout"
      card=this.model
      cardSelected=true
      themerOptions=this.themerOptions
      selectedTheme=this.selectedTheme
      handleThemeChange=this.handleThemeChange
      createTheme=(action this.createTheme)
    }}>
    <InRightToolbar/>
  </CardstackEdge>
{{/if}}