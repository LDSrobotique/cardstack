{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Build cardhost",
      "program": "${workspaceFolder}/node_modules/.bin/ember",
      "cwd": "${workspaceRoot}/cardhost",
      "args": ["b"],
      "env": {
        "JOBS": "1"
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Serve cardhost",
      "program": "${workspaceFolder}/node_modules/.bin/ember",
      "cwd": "${workspaceRoot}/cardhost",
      "args": ["s"],
      "env": {
        "JOBS": "1"
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run server",
      "runtimeArgs": ["--loader",  "ts-node/esm"],
      "cwd": "${workspaceRoot}/server",
      "args": [
        "src/index.ts"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run server tests",
      "runtimeArgs": ["--loader",  "ts-node/esm"],
      "cwd": "${workspaceRoot}/server",
      "args": [
        "./node_modules/.bin/qunit", "tests/**/*-test.ts"
      ]
    }
  ]
}
