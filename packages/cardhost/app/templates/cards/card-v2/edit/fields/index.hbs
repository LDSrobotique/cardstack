<CardEditor @card={{this.model.card}} @updateCard={{action "updateCard"}} as |card args|>
  <RightEdge
    @card={{card}}
    @currentCard={{this.model.card}}
    @parentCard={{get args "parentCard"}}
    @grandParentCard={{get args "grandParentCard"}}
    @selectedField={{get args "selectedField"}}
    @selectedFieldType={{get args "selectedFieldType"}}
    @setCardValue={{get args "setCardValue"}}
    @mode="fields"
    @cardSelected={{true}} {{!-- Change this when we want to display different right-edge options --}}
  />
</CardEditor>