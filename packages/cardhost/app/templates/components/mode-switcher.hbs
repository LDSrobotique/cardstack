<select
  onchange={{action "selectMode" value="target.value"}}
  class="mode-switcher {{@mode}}"
  data-test-mode-switcher
>
  {{#unless @mode}}
    <option selected disabled>Please select a mode</option>
  {{/unless}}

  {{#each this.modes as |mode|}}
    <option
      class="mode-switcher--mode {{mode.id}} {{if (eq @mode mode.id) "selected"}}"
      value={{mode.id}}
      selected={{eq @mode mode.id}}
      data-test-mode-switcher-mode={{mode.id}}
    >
      {{mode.displayTitle}}
    </option>
  {{/each}}
</select>