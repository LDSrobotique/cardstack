<ul>
  <li>
    <LinkTo @route="render">Render Card</LinkTo>
  </li>
  <li>
    <LinkTo @route="cards.add">Add a Card</LinkTo>
  </li>
  <li>
    <Input
      @value={{this.cardId}}
      @placeholder="Card ID to Update"
      @enter={{action this.updateCard this.cardId}}
    />
    {{#if this.cardId}}
      <LinkTo @route="cards.update" @model={{this.cardId}}>Update Card</LinkTo>
    {{/if}}
  </li>
</ul>