  <section class="card-builder--section">
    <h2 class="card-builder--section-header">
      {{svg-jar "cards" width="28px" height="28px"}}
      Featured Cards
    </h2>
    <div class="card-builder--section-grid">
      {{#each this.featuredCards as |card|}}
        <LinkTo @route="cards.card.view" @model={{card.id}} class="card-builder--section-card-link">
          {{! template-lint-disable no-inline-styles }}
          <div class="card-builder--section-card" style={{css-url "background-image" card.preview}}></div>
          <div class="card-builder--section-card-label">{{card.title}}</div>
        </LinkTo>
      {{/each}}
    </div>
  </section>
</main>

{{#if this.showDialog}}
  {{to-elsewhere
    named="cardhost-modal"
    send=(component
            "card-name-dialog"
            mode="dark"
            icon="icon-blank-card"
            title=this.dialogTitle
            model=this.cardModel
            closeDialog=this.closeDialog
          )
    outsideParams=(hash outsideClick=this.closeDialog)
  }}
{{/if}}
