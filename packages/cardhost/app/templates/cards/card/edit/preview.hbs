<section class="card-renderer--container" data-test-card-view={{this.model.name}}>
  <div class="card-renderer--inner-container view-container">
    <CardRenderer
      @card={{this.model}}
      @format="isolated"
      @mode="view"
      @class="preview"
      @cardSelected={{false}} />
  </div>
</section>

<style data-test-view-css>
  {{scope-css this.model.isolatedCss this.model.name}}
</style>