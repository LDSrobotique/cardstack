<div class="themer-editor-pane" data-test-editor-pane>
  <ReSizable
    ...attributes
    class="cardhost-card-theme-editor"
    @width={{this.width}}
    @directions={{this.directions}}
    @height={{this.height}}
    @classNames={{this.classNames}}
    @maxWidth={{this.maxWidth}}
    @maxHeight={{this.maxHeight}}
  >
    <div class="resizable-content">
      <div class="editor-section" aria-label={{this.monacoKeyboardInstructions}}>
        <CodeEditor
          @title="CSS"
          @code={{@css}}
          @language="css"
          @readOnly={{false}}
          @resizable={{true}}
          @updateCode={{@updateCode}}
          class="editor-pane--container-highlighted"
        />
      </div>

      <div class="editor-section">
        <CodeEditor
          @title="HTML"
          @code={{this.markup}}
          @language="handlebars"
          @readOnly={{true}}
          @resizable={{true}}
          @class="hide-in-percy"
        />
      </div>
      {{svg-jar "icon-grabber" class="drag-handle"}}
    </div>
  </ReSizable>
</div>